{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noEmitHelpers": false,
    "sourceMap": true
  },
  "files": [
    "./src/app/app.ts",
    "./src/app/home/directives/x-large.ts",
    "./src/app/home/home.ts",
    "./src/app/home/providers/title.ts",
    "./src/app/login/login.ts",
    "./src/app/navigation/navigation.ts",
    "./src/main.ts",
    "./src/vendor.ts"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  }
}
